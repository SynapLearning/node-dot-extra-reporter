{
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "target": "ES2022",
    "lib": ["es2020", "esnext.asynciterable", "esnext.array", "DOM"],

    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "preserveSymlinks": false,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    
    "outDir": "build",
    "allowJs": false,
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}
